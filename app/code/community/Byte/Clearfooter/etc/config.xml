<?xml version="1.0"?>
<config>
    <modules>
        <Byte_Clearfooter>
            <version>0.0.1</version>
        </Byte_Clearfooter>
    </modules>
    <global>
        <models>
            <byte_clearfooter>
                <class>Byte_Clearfooter_Model</class>
            </byte_clearfooter>
        </models>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <byte_clearfooter_page_edit_tab_content>
                        <type>singleton</type>
                        <class>byte_clearfooter/observer</class>
                        <method>addIsFooterBlockFLag</method>
                    </byte_clearfooter_page_edit_tab_content>
                </observers>
            </adminhtml_block_html_before>
            <model_save_before>
                <observers>
                    <byte_clearfooter_model_save_before>
                    <class>byte_clearfooter/observer</class>
                    <method>modelSaveBefore</method>
                    </byte_clearfooter_model_save_before>
                </observers>
            </model_save_before>
        </events>
        <resources>
            <byte_clearfooter_setup>
                <setup>
                    <module>Byte_Clearfooter</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </byte_clearfooter_setup>
        </resources>
    </global>
</config>